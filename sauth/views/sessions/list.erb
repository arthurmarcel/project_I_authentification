<!DOCTYPE html>
<html>
<head>
  <title>Login OK</title>
</head>
<body>

<h1>Welcome <%= @user.login %> !</h1>

<%if !@error.nil?%>
	<p><%=@error%></p>
<%end%>

<% if @apps_own && !@apps_own.empty? %>
	<div class="listappown">
		<p>List of applications you own:</p>
		<ul>
			<% @apps_own.each do |ao| %>
				<li><%=ao.name%> (<%=ao.url%>)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/sauth/apps/<%=ao.name%>/delete">Delete</a></li>
			<% end %>
		</ul>
	</div>
<%else%>
	<p>You have created no application.</p>
<%end%>

<% if @apps_linked && !@apps_linked.empty? %>
	<div class="listappuse">
		<p>List of applications using your account:</p>
		<ul>
			<% @apps_linked.each do |al| %>
				<li><%=al.name%> (<%=al.url%>)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/sauth/uses/<%=al.name%>/delete">Delete</a></li>
			<% end %>
		</ul>
	</div>
<%else%>
	<p>No application uses your account.</p>
<%end%>

<% if @users %>
	<div class="listusers">
		<p>List of users:</p>
		<ul>
			<% @users.each do |u| %>
				<li><%=u.login%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/sauth/users/<%=u.login%>/delete">Delete</a></li>
			<% end %>
		</ul>
	</div>
<%end%>

<a href="/sauth/apps/new">Register a new application</a><br/>
<% if @user && !@user.admin %>
	<a href="/sauth/users/<%=@user.login%>/delete">Delete your account</a><br/>
<% end %>
<a href="/sauth/sessions/delete">Disconnect</a>

</body>
</html>

